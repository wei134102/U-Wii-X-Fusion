<Window x:Class="U_Wii_X_Fusion.Xbox360FtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xbox 360 FTP（Aurora）"
        Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Background="#F5F5F5" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="连接运行 Aurora 的 Xbox 360 主机 FTP" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="12" Margin="0,0,0,10" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="IP 地址：" VerticalAlignment="Center" Margin="0,6,8,6"/>
                <TextBox x:Name="txtIp" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,4" Padding="4,2"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="端口：" VerticalAlignment="Center" Margin="12,6,8,6"/>
                <TextBox x:Name="txtPort" Grid.Row="0" Grid.Column="3" Text="21" VerticalAlignment="Center" Margin="0,4" Padding="4,2"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="用户名：" VerticalAlignment="Center" Margin="0,6,8,6"/>
                <TextBox x:Name="txtUser" Grid.Row="1" Grid.Column="1" Text="xboxftp" VerticalAlignment="Center" Margin="0,4" Padding="4,2"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="密码：" VerticalAlignment="Center" Margin="12,6,8,6"/>
                <TextBox x:Name="txtPass" Grid.Row="1" Grid.Column="3" Text="xboxftp" VerticalAlignment="Center" Margin="0,4" Padding="4,2"/>
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="btnTest" Content="测试连接" Width="90" Padding="8,4" Margin="0,0,8,0" Click="BtnTest_Click"/>
                    <Button x:Name="btnSave" Content="保存设置" Width="90" Padding="8,4" Margin="0,0,8,0" Click="BtnSave_Click"/>
                    <Button x:Name="btnDownloadDb" Content="下载数据库" Width="100" Padding="8,4" Margin="0,0,8,0" ToolTip="从主机 /Game/Data/DataBases/ 下载 settings.db 和 Content.db" Click="BtnDownloadDb_Click"/>
                    <Button x:Name="btnListDirs" Content="列出 GameData 目录" Width="130" Padding="8,4" Margin="0,0,8,0" ToolTip="列出 /Game/Data/GameData/ 下的子目录（Title ID）" Click="BtnListDirs_Click"/>
                    <Button x:Name="btnOpenDbViewer" Content="打开数据库" Width="90" Padding="8,4" ToolTip="预览与修改 Content.db、settings.db" Click="BtnOpenDbViewer_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" Header="GameData 目录列表 / 状态" BorderBrush="#CCC" BorderThickness="1" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtListHint" Grid.Row="0" Text="点击「列出 GameData 目录」获取主机上的资源目录（需先测试连接成功）。" TextWrapping="Wrap" Foreground="#666" Margin="0,0,0,6"/>
                <ListBox x:Name="lstDirs" Grid.Row="1" MinHeight="120" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
            </Grid>
        </GroupBox>

        <Border Grid.Row="3" Background="#EEE" Padding="8,6" CornerRadius="3">
            <TextBlock x:Name="txtStatus" Text="" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
        </Border>
    </Grid>
</Window>
