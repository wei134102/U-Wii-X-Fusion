<Window x:Class="U_Wii_X_Fusion.WiiGameQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U_Wii_X_Fusion"
        mc:Ignorable="d"
        Title="Wii游戏查询"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#F5F5F5">
        <StackPanel Margin="10">
            <TextBlock Text="Wii游戏查询" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- 游戏查询区域 -->
            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,20" Background="White">
                <StackPanel>
                    <TextBlock Text="搜索与筛选" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- 搜索框 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="txtSearch" Width="300" Margin="0,0,10,0" ToolTip="输入游戏ID或名称"/>
                        <Button x:Name="btnSearch" Content="搜索" Width="80"/>
                        <Button x:Name="btnClearSearch" Content="清除" Width="80" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 筛选器 -->
                    <WrapPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="游戏类型: " Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbGenre" Width="150">
                                <ComboBoxItem>全部游戏类型</ComboBoxItem>
                                <!-- 动态填充 -->
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="语言: " Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbLanguage" Width="100">
                                <ComboBoxItem>全部语言</ComboBoxItem>
                                <ComboBoxItem>中文</ComboBoxItem>
                                <ComboBoxItem>EN</ComboBoxItem>
                                <ComboBoxItem>JA</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="控制器: " Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbController" Width="120">
                                <ComboBoxItem>全部控制器</ComboBoxItem>
                                <ComboBoxItem>Wiimote</ComboBoxItem>
                                <ComboBoxItem>Nunchuk</ComboBoxItem>
                                <ComboBoxItem>GameCube</ComboBoxItem>
                                <ComboBoxItem>ClassicController</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="区域: " Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cmbRegion" Width="100">
                                <ComboBoxItem>全部区域</ComboBoxItem>
                                <ComboBoxItem>PAL</ComboBoxItem>
                                <ComboBoxItem>NTSC</ComboBoxItem>
                                <ComboBoxItem>NTSC-U</ComboBoxItem>
                                <ComboBoxItem>NTSC-J</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        
                        <Button x:Name="btnApplyFilters" Content="应用筛选" Width="100"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
            
            <!-- 游戏列表和详情 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- 游戏列表 -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="游戏列表" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgGames" AutoGenerateColumns="False" Height="300" Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="游戏ID" Width="100" Binding="{Binding GameId}"/>
                            <DataGridTextColumn Header="游戏名称" Width="*" Binding="{Binding Title}"/>
                            <DataGridTextColumn Header="中文名称" Width="150" Binding="{Binding ChineseTitle}"/>
                            <DataGridTextColumn Header="平台" Width="80" Binding="{Binding Platform}"/>
                            <DataGridTextColumn Header="区域" Width="80" Binding="{Binding Region}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                
                <!-- 游戏详情和封面预览 -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <!-- 游戏详情 -->
                    <TextBlock Text="游戏详情" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Background="White">
                        <StackPanel x:Name="spGameDetails">
                            <TextBlock Text="选择游戏查看详情" HorizontalAlignment="Center" VerticalAlignment="Center" Height="200"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 封面预览 -->
                    <TextBlock Text="封面预览" FontSize="14" FontWeight="Bold" Margin="0,15,0,10"/>
                    <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Background="White">
                        <StackPanel>
                            <!-- 封面类型选择 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="封面类型: " Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <ComboBox x:Name="cmbCoverType" Width="150">
                                    <ComboBoxItem>2D</ComboBoxItem>
                                    <ComboBoxItem>3D</ComboBoxItem>
                                    <ComboBoxItem>disc</ComboBoxItem>
                                    <ComboBoxItem>full</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 封面显示区域 -->
                            <Border BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="3" Height="200" Background="#F9F9F9">
                                <Image x:Name="imgCover" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock x:Name="txtCoverStatus" Text="请选择游戏查看封面" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>