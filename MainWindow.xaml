<Window x:Class="U_Wii_X_Fusion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U_Wii_X_Fusion"
        mc:Ignorable="d"
        Title="U-Wii-X Fusion" Height="1000" Width="1400"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="U-Wii-X Fusion" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtHeaderVersion" Text="v0.0.0.0" FontSize="12" Foreground="#BDC3C7" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <TextBlock Text="多合一游戏管理工具 | by：B站:86年复古游戏厅" FontSize="12" Foreground="#BDC3C7"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="btnCheckUpdate" Content="检查更新" Padding="8,4" Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BtnCheckUpdate_Click"/>
            </Grid>
        </Border>
        
        <!-- 主内容区 -->
        <TabControl Grid.Row="1" Margin="0" TabStripPlacement="Left">
            <!-- 设置标签页 -->
            <TabItem Header="设置">
                <Grid Background="#F5F5F5">
                    <StackPanel Margin="10">
                        <TextBlock Text="设置" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
                        <Expander Header="通用设置" IsExpanded="True" Margin="0,0,0,10">
                            <StackPanel Margin="10,0,0,0">
                                <CheckBox x:Name="chkAutoUpdate" Content="启用自动更新" Margin="0,5,0,0"/>
                                <CheckBox x:Name="chkEnableLogging" Content="启用日志记录" Margin="0,5,0,0"/>
                                <CheckBox x:Name="chkCheckDevices" Content="启动时检查设备" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Expander>
                        <Expander Header="路径设置" Margin="0,0,0,10">
                            <StackPanel Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="游戏存储路径:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtGamePath" Width="300" Margin="0,0,10,0"/>
                                    <Button x:Name="btnBrowseGamePath" Content="浏览..."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="数据库路径:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtDatabasePath" Width="300" Margin="0,0,10,0"/>
                                    <Button x:Name="btnBrowseDatabasePath" Content="浏览..."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="封面存储路径:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtCoverPath" Width="300" Margin="0,0,10,0"/>
                                    <Button x:Name="btnBrowseCoverPath" Content="浏览..."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Wii U 封面路径:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtWiiUCoverPath" Width="300" Margin="0,0,10,0"/>
                                    <Button x:Name="btnBrowseWiiUCoverPath" Content="浏览..."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Xbox 360 封面路径:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtXboxCoverPath" Width="300" Margin="0,0,10,0"/>
                                    <Button x:Name="btnBrowseXboxCoverPath" Content="浏览..."/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <Expander Header="网络设置" Margin="0,0,0,10">
                            <StackPanel Margin="10,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="元数据API密钥:" Width="120" VerticalAlignment="Center"/>
                                    <TextBox x:Name="txtApiKey" Width="300"/>
                                </StackPanel>
                                <CheckBox x:Name="chkEnableProxy" Content="启用代理" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Expander>
                        <Button x:Name="btnSaveSettings" Content="保存设置" Width="100" Height="30" Margin="0,20,0,0" Click="BtnSaveSettings_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Wii标签页 -->
            <TabItem Header="WII">
                <Grid Background="#F5F5F5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：列表和操作 -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>  <!-- 标题 -->
                                <RowDefinition Height="Auto"/>  <!-- 游戏列表 + 统计 -->
                                <RowDefinition Height="Auto"/>  <!-- 按钮行 -->
                                <RowDefinition Height="*"/>     <!-- 列表 + 控制器/信息 -->
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Wii / NGC 游戏管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <!-- 游戏列表来源切换：目录 / 磁盘1 / 磁盘2（右侧对齐） -->
                            <Grid Grid.Row="1" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="游戏列表" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtGameCount" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtWiiListStatus" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button x:Name="btnListSourceDirectory" Content="目录" Width="60" Margin="0,0,6,0" Padding="4,2" Click="BtnListSourceDirectory_Click"/>
                                    <Button x:Name="btnListSourceDisk1" Content="磁盘1" Width="60" Margin="0,0,6,0" Padding="4,2" Click="BtnListSourceDisk1_Click"/>
                                    <Button x:Name="btnListSourceDisk2" Content="磁盘2" Width="60" Margin="0,0,6,0" Padding="4,2" Click="BtnListSourceDisk2_Click"/>
                                    <Button x:Name="btnGameQuery" Content="Wii游戏数据库查询" Padding="4,2" Click="BtnGameQuery_Click"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <!-- 目录模式：显示“添加”按钮；磁盘1/2模式：显示本地磁盘下拉框 -->
                                <Button x:Name="btnAddSource" Content="添加" Width="60" Padding="6,3" Margin="0,0,6,0" Click="BtnAddSource_Click">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="添加文件" Click="MenuAddFile_Click"/>
                                            <MenuItem Header="添加目录" Click="MenuAddDirectory_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <ComboBox x:Name="cboDiskDrive" Width="160" Margin="0,0,6,0" Visibility="Collapsed"
                                          DisplayMemberPath="DisplayName" SelectedValuePath="RootPath"
                                          SelectionChanged="CboDiskDrive_SelectionChanged"/>
                                <!-- “选择”按钮：悬浮菜单包含 全选/反选/取消选择/磁盘差集/导入导出 -->
                                <Button x:Name="btnSelectMissingOnDisk" Content="选择" Width="70" Padding="6,3" Margin="0,0,6,0"
                                        Click="BtnSelectMissingOnDisk_Click">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="全选" Click="BtnSelectAll_Click"/>
                                            <MenuItem Header="反选" Click="BtnInvertSelect_Click"/>
                                            <MenuItem Header="取消选择" Click="BtnClearSelect_Click"/>
                                            <Separator/>
                                            <MenuItem Header="磁盘1中没有的项" Click="MenuSelectMissingOnDisk1_Click"/>
                                            <MenuItem Header="磁盘2中没有的项" Click="MenuSelectMissingOnDisk2_Click"/>
                                            <Separator/>
                                            <MenuItem Header="导出列表" Click="BtnSaveList_Click"/>
                                            <MenuItem Header="导入列表" Click="BtnLoadList_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Button x:Name="btnRemoveSelected" Content="删除选中游戏" Width="90" Padding="6,3" Margin="0,0,6,0" ToolTip="从列表中移除勾选的游戏（可选删除磁盘文件）" Click="BtnRemoveSelected_Click"/>
                                <Button x:Name="btnCopyToDisk" Content="拷贝" Width="70" Padding="6,3" Margin="0,0,6,0" ToolTip="拷贝/转换操作" Click="BtnCopyMenu_Click">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="拷贝到磁盘1" Click="MenuCopyToDisk1_Click"/>
                                            <MenuItem Header="拷贝到磁盘2" Click="MenuCopyToDisk2_Click"/>
                                            <Separator/>
                                            <MenuItem Header="转换为 WBFS（仅 Wii）" Click="MenuConvertToWbfs_Click"/>
                                            <MenuItem Header="转换为 ISO（仅 Wii）" Click="MenuConvertToIso_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnWiiList" Content="列表" Width="60" Padding="6,3" Margin="0,0,8,0" Click="BtnWiiList_Click">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="清空列表" Click="MenuWiiListClear_Click"/>
                                            <MenuItem Header="刷新列表" Click="MenuWiiListRefresh_Click"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                <Button x:Name="btnRenameGames" Content="游戏重命名" Padding="8,4" Margin="0,0,0,0" ToolTip="将选中游戏按“中文名 [ID]\\ID.扩展名”规则重命名并整理到文件夹" Click="BtnRenameGames_Click"/>
                            </StackPanel>
                            </Grid>

                            <!-- 列表 + 游戏简介/信息 使用可伸缩的两行布局 -->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DataGrid Grid.Row="0"
                                          x:Name="dgGames" AutoGenerateColumns="False" Background="White" 
                                          SelectionMode="Extended" SelectionUnit="FullRow" CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                          PreviewMouseRightButtonDown="DgGames_PreviewMouseRightButtonDown"
                                          SelectionChanged="DgGames_SelectionChanged">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="搜索游戏视频" Click="MenuSearchGameVideo_Click"/>
                                            <MenuItem Header="打开游戏位置" Click="MenuOpenGameLocation_Click"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <!-- 注意：DataGrid 里的 CheckBox 编辑默认可能需要提交才写回；显式 TwoWay+PropertyChanged 可提升“勾选后立刻点删除/保存”的可靠性 -->
                                        <DataGridCheckBoxColumn Header="选" Width="36" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="游戏ID" Width="100" Binding="{Binding GameId}"/>
                                        <DataGridTextColumn Header="游戏名称" Width="*" MinWidth="120" Binding="{Binding Title}"/>
                                        <DataGridTextColumn Header="中文名称" Width="*" MinWidth="120" Binding="{Binding ChineseTitle}"/>
                                        <DataGridTextColumn Header="大小" Width="90" Binding="{Binding FormattedSize}" SortMemberPath="Size"/>
                                        <DataGridTextColumn Header="平台" Width="60" Binding="{Binding Platform}"/>
                                        <DataGridTextColumn Header="格式" Width="50" Binding="{Binding Format}"/>
                                        <DataGridTextColumn Header="路径" Width="200" Binding="{Binding Path}" Visibility="Collapsed"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- 游戏详情：游戏简介 + 游戏信息 -->
                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 游戏简介：内容超出时右侧显示垂直滚动条可预览全文 -->
                                    <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="0,0,6,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏简介" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
                                                <TextBlock x:Name="txtSynopsis" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>

                                    <!-- 游戏信息：内容超出时右侧显示垂直滚动条可预览全文 -->
                                    <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="6,0,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏信息" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
                                                <TextBlock x:Name="txtGameInfo" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>

                        </Grid>

                        <!-- 右侧：封面预览（Disc + 3D） -->
                        <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="8" Background="White" Margin="12,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <GroupBox Header="Disc 封面" FontSize="12" Margin="0,0,0,4">
                                    <Border Background="#F5F5F5" Padding="4">
                                        <Image x:Name="imgDiscCover" Stretch="Uniform" />
                                    </Border>
                                </GroupBox>

                                <GroupBox Header="3D 封面" Grid.Row="1" FontSize="12" Margin="0,4,0,0">
                                    <Border Background="#F5F5F5" Padding="4">
                                        <Image x:Name="img3DCover" Stretch="Uniform" />
                                    </Border>
                                </GroupBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Wii U标签页：布局与 WII 一致，游戏列表 + 封面预览 + 游戏详情 -->
            <TabItem Header="WIIU">
                <Grid Background="#F5F5F5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：列表和操作 -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Wii U 游戏管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                            <Grid Grid.Row="1" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="游戏列表" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtWiiUGameCount" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtWiiUListStatus" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button x:Name="btnWiiUGameQuery" Content="Wii U 游戏数据库" Padding="4,2" Margin="0,0,8,0" Click="BtnWiiUGameQuery_Click"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnWiiUAddSource" Content="添加" Width="60" Padding="6,3" Margin="0,0,6,0" Click="BtnWiiUAddSource_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="添加文件" Click="MenuWiiUAddFile_Click"/>
                                                <MenuItem Header="添加目录" Click="MenuWiiUAddDirectory_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button x:Name="btnWiiUSelect" Content="选择" Width="70" Padding="6,3" Margin="0,0,6,0" Click="BtnWiiUSelect_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="全选" Click="BtnWiiUSelectAll_Click"/>
                                                <MenuItem Header="反选" Click="BtnWiiUInvertSelect_Click"/>
                                                <MenuItem Header="取消选择" Click="BtnWiiUClearSelect_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button x:Name="btnWiiURemoveSelected" Content="删除选中" Width="80" Padding="6,3" Margin="0,0,6,0" ToolTip="从列表中移除勾选的游戏" Click="BtnWiiURemoveSelected_Click"/>
                                    <Button x:Name="btnWiiUCopy" Content="拷贝" Width="70" Padding="6,3" Margin="0,0,6,0" ToolTip="拷贝选中游戏到指定分区的 install 文件夹" Click="BtnWiiUCopy_Click"/>
                                    <Button x:Name="btnWiiUList" Content="列表" Width="60" Padding="6,3" Margin="0,0,6,0" Click="BtnWiiUList_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="清空列表" Click="MenuWiiUListClear_Click"/>
                                                <MenuItem Header="刷新列表" Click="MenuWiiUListRefresh_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DataGrid Grid.Row="0" x:Name="dgGamesWiiU" AutoGenerateColumns="False" Background="White"
                                          SelectionMode="Single" SelectionUnit="FullRow" CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                          SelectionChanged="DgGamesWiiU_SelectionChanged">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="搜索游戏视频" Click="MenuWiiUSearchGameVideo_Click"/>
                                            <MenuItem Header="打开游戏位置" Click="MenuWiiUOpenGameLocation_Click"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="选" Width="36" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="TITLEID" Width="100" Binding="{Binding GameId}"/>
                                        <DataGridTextColumn Header="游戏名称" Width="*" MinWidth="120" Binding="{Binding Title}"/>
                                        <DataGridTextColumn Header="中文名称" Width="*" MinWidth="120" Binding="{Binding ChineseTitle}"/>
                                        <DataGridTextColumn Header="大小" Width="90" Binding="{Binding FormattedSize}" SortMemberPath="Size"/>
                                        <DataGridTextColumn Header="文件夹" Width="120" Binding="{Binding ParentFolderName}"/>
                                        <DataGridTextColumn Header="路径" Width="200" Binding="{Binding Path}" Visibility="Collapsed"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="0,0,6,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏简介" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
                                                <TextBlock x:Name="txtSynopsisWiiU" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="6,0,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏信息" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" VerticalAlignment="Stretch">
                                                <TextBlock x:Name="txtGameInfoWiiU" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!-- 右侧：封面预览 -->
                        <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="8" Background="White" Margin="12,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Disc 封面" FontSize="12" Margin="0,0,0,4">
                                    <Border Background="#F5F5F5" Padding="4">
                                        <Image x:Name="imgDiscCoverWiiU" Stretch="Uniform"/>
                                    </Border>
                                </GroupBox>
                                <GroupBox Header="3D 封面" Grid.Row="1" FontSize="12" Margin="0,4,0,0">
                                    <Border Background="#F5F5F5" Padding="4">
                                        <Image x:Name="img3DCoverWiiU" Stretch="Uniform"/>
                                    </Border>
                                </GroupBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Xbox 360 标签页：布局参考 Wii U -->
            <TabItem Header="XBOX">
                <Grid Background="#F5F5F5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左侧：列表和操作 -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Xbox 360 游戏管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                            <Grid Grid.Row="1" Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="游戏列表" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtXboxGameCount" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtXboxListStatus" Text="" FontSize="12" Foreground="#666" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Button x:Name="btnXboxGameQuery" Content="Xbox 360 游戏数据库" Padding="4,2" Margin="0,0,8,0" Click="BtnXboxGameQuery_Click"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,6">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnXboxAddSource" Content="添加" Width="60" Padding="6,3" Margin="0,0,6,0" Click="BtnXboxAddSource_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="添加文件" Click="MenuXboxAddFile_Click"/>
                                                <MenuItem Header="添加目录" Click="MenuXboxAddDirectory_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button x:Name="btnXboxSelect" Content="选择" Width="70" Padding="6,3" Margin="0,0,6,0" Click="BtnXboxSelect_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="全选" Click="BtnXboxSelectAll_Click"/>
                                                <MenuItem Header="反选" Click="BtnXboxInvertSelect_Click"/>
                                                <MenuItem Header="取消选择" Click="BtnXboxClearSelect_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button x:Name="btnXboxRemoveSelected" Content="删除选中" Width="80" Padding="6,3" Margin="0,0,6,0" ToolTip="从列表中移除勾选的游戏" Click="BtnXboxRemoveSelected_Click"/>
                                    <Button x:Name="btnXboxCopy" Content="拷贝" Width="70" Padding="6,3" Margin="0,0,6,0" ToolTip="拷贝选中游戏到指定目录" Click="BtnXboxCopy_Click"/>
                                    <Button x:Name="btnXboxList" Content="列表" Width="60" Padding="6,3" Margin="0,0,6,0" Click="BtnXboxList_Click">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="清空列表" Click="MenuXboxListClear_Click"/>
                                                <MenuItem Header="刷新列表" Click="MenuXboxListRefresh_Click"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                    <Button x:Name="btnXboxAddToDb" Content="添加到数据库" Width="100" Padding="6,3" Margin="0,0,6,0" ToolTip="将选中游戏添加到 Xbox 360 游戏数据库" Click="BtnXboxAddToDb_Click"/>
                                    <Button x:Name="btnXboxDownloadCover" Content="下载封面" Width="80" Padding="6,3" Margin="0,0,6,0" ToolTip="为选中游戏下载封面（需先设置封面存储路径）" Click="BtnXboxDownloadCover_Click"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DataGrid Grid.Row="0" x:Name="dgGamesXbox" AutoGenerateColumns="False" Background="White"
                                          SelectionMode="Single" SelectionUnit="FullRow" CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                          SelectionChanged="DgGamesXbox_SelectionChanged">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="添加到XBOX360游戏数据库" Click="MenuXboxAddToDb_Click"/>
                                            <MenuItem Header="下载封面" Click="MenuXboxDownloadCover_Click"/>
                                            <MenuItem Header="打开游戏位置" Click="MenuXboxOpenGameLocation_Click"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn Header="选" Width="36" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        <DataGridTextColumn Header="游戏ID" Width="100" Binding="{Binding GameId}"/>
                                        <DataGridTextColumn Header="游戏名称" Width="*" MinWidth="120" Binding="{Binding Title}"/>
                                        <DataGridTextColumn Header="中文名称" Width="*" MinWidth="120" Binding="{Binding ChineseTitle}"/>
                                        <DataGridTextColumn Header="大小" Width="90" Binding="{Binding FormattedSize}" SortMemberPath="Size"/>
                                        <DataGridTextColumn Header="格式" Width="60" Binding="{Binding Format}"/>
                                        <DataGridTextColumn Header="路径" Width="200" Binding="{Binding Path}" Visibility="Collapsed"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="0,0,6,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏简介" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                                <TextBlock x:Name="txtSynopsisXbox" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="6" Background="White" Margin="6,0,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="游戏信息" FontSize="13" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                                <TextBlock x:Name="txtGameInfoXbox" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!-- 右侧：封面预览 -->
                        <Border Grid.Column="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="8" Background="White" Margin="12,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="封面" FontSize="12" Margin="0,0,0,4">
                                    <Border Background="#F5F5F5" Padding="4">
                                        <Image x:Name="imgCoverXbox" Stretch="Uniform"/>
                                    </Border>
                                </GroupBox>
                                <GroupBox Header="状态" Grid.Row="1" FontSize="12" Margin="0,4,0,0">
                                    <StackPanel>
                                        <TextBlock x:Name="txtXboxStatus" Text="选中游戏显示详情" FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="4,4,4,4"/>
                                        <ProgressBar x:Name="progressXboxCover" Height="8" Margin="4,0,4,4" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
