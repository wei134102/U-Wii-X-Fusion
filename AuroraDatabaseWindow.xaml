<Window x:Class="U_Wii_X_Fusion.AuroraDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aurora 数据库（Content.db / settings.db）预览与修改"
        Height="620" Width="900"
        WindowStartupLocation="CenterOwner"
        MinHeight="400" MinWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Aurora 数据库：预览与修改 Content.db、settings.db" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,8" Background="White" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="数据库：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cmbDbFile" Grid.Column="1" MinWidth="280" VerticalAlignment="Center"
                          SelectionChanged="CmbDbFile_SelectionChanged"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button x:Name="btnOpen" Content="打开文件/文件夹" Width="130" Padding="8,4" Margin="0,0,8,0" Click="BtnOpen_Click"/>
                    <Button x:Name="btnRefresh" Content="刷新表" Width="70" Padding="8,4" Margin="0,0,8,0" Click="BtnRefresh_Click"/>
                    <Button x:Name="btnSave" Content="保存修改" Width="90" Padding="8,4" Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="0,0,8,0" Background="White" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="表 / Lua 脚本" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ListBox x:Name="lstTables" Grid.Row="1" SelectionChanged="LstTables_SelectionChanged"
                             DisplayMemberPath="DisplayName"/>
                    <TextBlock x:Name="txtLuaHint" Grid.Row="2" TextWrapping="Wrap" FontSize="11" Foreground="#666" Margin="0,8,0,0" Visibility="Collapsed"/>
                </Grid>
            </Border>
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Padding="8" Background="White" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="txtTableCaption" Grid.Row="0" Text="选择左侧表以预览数据" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <DataGrid x:Name="dgData" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="False"
                              CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="True"
                              CanUserResizeColumns="True" CanUserSortColumns="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              SelectionMode="Single" SelectionUnit="Cell"
                              RowEditEnding="DgData_RowEditEnding" CellEditEnding="DgData_CellEditEnding"
                              LoadingRow="DgData_LoadingRow"/>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="3" Background="#F5F5F5" Padding="8,6" Margin="0,8,0,0" CornerRadius="3">
            <TextBlock x:Name="txtStatus" Text="" TextWrapping="Wrap" FontSize="12" Foreground="#333"/>
        </Border>
    </Grid>
</Window>
