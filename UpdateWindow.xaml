<Window x:Class="U_Wii_X_Fusion.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="检查更新" Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="更新检查" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="15" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="spUpdateInfo">
                    <TextBlock x:Name="txtStatus" Text="正在检查更新..." FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtCurrentVersion" Text="" FontSize="12" Foreground="#666" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtLatestVersion" Text="" FontSize="12" Foreground="#666" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txtReleaseNotes" Text="" TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <ProgressBar x:Name="pbDownload" Grid.Row="2" Height="20" Margin="0,15,0,10" Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnDownload" Content="下载并更新" Width="100" Padding="8,4" Margin="0,0,10,0" Click="BtnDownload_Click" IsEnabled="False"/>
            <Button x:Name="btnCancel" Content="关闭" Width="80" Padding="8,4" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
